.full-screen, [full-screen]
  height 100vh

.full-screen-gt-xs, [full-screen-gt-xs]
  @media (min-width: 600px)
    height 100vh

.full-screen-minus-toolbar-gt-xs, [full-screen-minux-toolbar-gt-xs]
  @media (min-width: 600px)
    height calc(100vh - 64px)

    @media (max-width: 959px) and (min-width: 0) and (orientation: portrait)
      height calc(100vh - 56px)

    @media (max-width: 959px) and (min-width: 0) and (orientation: landscape)
      height calc(100vh - 48px)

.position-relative, [position-relative]
  position relative

.fixed-top, [fixed-top]
  position fixed
  top 0

.absolute-top, [absolute-top]
  position absolute
  top 0

.absolute-left-bottom
  position absolute
  right 0
  bottom 0

.absolute-fill, [absolute-fill]
  position absolute
  top 0
  left 0
  width 100%
  height 100%

.full-width, [full-width]
  width 100%

.full-height, [full-height]
  height 100%

.object-fit-cover, [object-fit-cover]
  object-fit cover

.object-fit-contain, [object-fit-contain]
  object-fit contain

.text-align-center, [text-align-center]
  text-align center

.color-white, [color-white]
  color white !important
  *
    color white !important

.uppercase, [uppercase]
  text-transform uppercase !important

.no-margin
  margin 0 !important
