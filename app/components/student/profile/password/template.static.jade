form.md-no-empty-errors-spacer(
  block='ctz-student-profile-password'
  layout='column'
  layout-align='center center'
  ng-submit='$ctrl.save()'
)
  md-toolbar.md-hue-1.md-whiteframe-z1
    .md-toolbar-tools(layout='row')
      h2 Editando contraseña
      span(flex)
      md-button.md-primary.md-raised(
        type='submit'
        ng-disabled='$ctrl.locked'
      ) Actualizar

  md-card.md-whiteframe-z1(flex layout='column')
    div(layout-padding)
      div.margin-bottom-18(layout='column')
        md-input-container
          label Contraseña
          input(ng-model='$ctrl.user.password' type='password')

        md-input-container
          label Repetir contraseña
          input(ng-model='$ctrl.user.passwordConfirmation' type='password')
