form.md-no-empty-errors-spacer(
  block='ctz-student-profile-editor'
  layout-fill
  layout='column'
  layout-align='center center'
  ng-submit='$ctrl.save()'
)
  md-toolbar.md-hue-1.md-whiteframe-z1
    .md-toolbar-tools(layout='row')
      h2 Editando perfil
      span(flex)
      md-button.md-primary.md-raised(
        type='submit'
        ng-disabled='$ctrl.locked'
      ) Actualizar

  md-content(flex layout='column')
    div(layout-padding)
      div(layout='column')
        ctz-avatar-input(ng-model='$ctrl.student.avatar')

        div(layout='row')
          md-input-container
            label Nombre
            input(ng-model='$ctrl.student.firstName')

          md-input-container
            label Apellido
            input(ng-model='$ctrl.student.lastName')

        md-input-container
          label Descripción
          textarea(ng-model='$ctrl.student.description')

        div(layout='row')
          md-input-container(flex=20)
            label Edad
            input(ng-model='$ctrl.student.age' type='number' min=1)

          md-input-container(flex)
            label Año escolar
            md-select(ng-model='$ctrl.student.schoolYear')
              md-option(
                ng-repeat='o in $ctrl.schoolYears'
                ng-value=':: o'
                ng-bind=':: o'
              )

        md-input-container
          label Teléfono
          input(
            ng-model='$ctrl.student.phoneNumber'
            type='string'
          )
