md-card.md-no-empty-errors-spacer(
  block='ctz-appointment-form-card'
  layout-fill
)
  md-toolbar: .md-toolbar-tools
    | Reservar clase
    span(flex)
    md-button.md-icon-button
      md-icon(
        md-svg-src='/images/icons/remove.svg'
        ng-click='$ctrl.$mdDialog.hide()'
      )

  md-card-title
    md-card-title-text
      .md-headline {{:: $ctrl.teacher.name }}
      .md-subhead {{:: $ctrl.teacher.shortDesc }}

    md-card-title-media
      img.md-media-sm.object-fit-contain(ng-src='{{:: $ctrl.teacher.avatar }}')

  md-nav-bar(
    md-selected-item='$ctrl.classType'
    md-border-bottom
  )
    md-nav-item(md-nav-click='$ctrl.setClassType()') Online
    md-nav-item(md-nav-click='$ctrl.setClassType()') Presencial

  md-card-content(layout='column')
    md-radio-group(
      ng-model='$ctrl.appointment.kind'
      ng-class='{"layout-row": $ctrl.$mdMedia("gt-xs")}'
    )
      md-radio-button(value='at_students_place') En mi casa
      md-radio-button(value='at_teachers_place') En casa del profesor
      md-radio-button(value='at_public_place') En lugar p√∫blico

      ctz-spacer-xs

    md-input-container(ng-if='$ctrl.appointment.kind === "at_public_place"')
      label Lugar
      input(ng-model='$ctrl.appointment.placeDesc')

    md-input-container
      label Materias
      ctz-subject-select(
        ng-model='$ctrl.appointment.subjects'
        subjects='$ctrl.teacher.subjectGroups'
      )

    div(layout='row')
      md-input-container(flex=75)
        label Fecha
        input(
          mdc-datetime-picker
          date="true"
          time="true"
          show-todays-date
          ng-model="$ctrl.appointment.startsAt"
        )

      md-input-container(flex=25)
        label Horas
        input(
          ng-model="$ctrl.appointment.hours"
          type='number'
          min=0
          max=10
        )
