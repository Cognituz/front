    md-input-container
      label Nombre
      input(ng-model='$ctrl.teacher.firstName')

    md-input-container
      label Apellido
      input(ng-model='$ctrl.teacher.lastName')

  div(layout='column')
    md-input-container
      label Tel√©fono
      input(
        ng-model='$ctrl.teacher.phoneNumber'
        type='string'
      )

    md-input-container
      label Precio por hora
      input(
        ng-model='$ctrl.teacher.hourlyPrice'
        type='number'
        min='1'
      )
