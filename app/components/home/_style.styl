.ctz-home
  &__header
    position relative
    background-image url('/images/home_main_background.jpg')
    background-size cover

    &::before
      position absolute
      display block
      content ' '
      top 0
      left 0
      width 100%
      height 100%
      background: rgba(black, 0.7)

  &__header-brand
    height 100%
    padding 8px

    img
      height 100%
      object-fit contain

  &__cards
    padding 5vw

  &__card-icon
    width 120px
    height 120px
