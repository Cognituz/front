.ctz-home
  &__toolbar
    z-index 3

  &__header-section
    position relative
    background-image  url('/images/home_main_background.jpg')
    background-size cover

    &::before
      position absolute
      display block
      content ' '
      top 0
      left 0
      width 100%
      height 100%
      background: rgba(black, 0.7)

  &__header-brand
    height 100%
    padding 8px 0

    img
      height 100%
      object-fit contain

  &__cards-section
    padding 5vw

  &__card-icon
    width 40px
    height 40px

  &__video-section
    background-image url('/images/home_video_background.jpg')
    background-size cover

  &__video-frame
    width 100vw
    height ((9 * 100) / 16)vw

    @media (min-width: 600px)
      width ((16 * 80) / 9)vh
      height 80vh

  &__contact-section
    @media (min-width: 600px)
      padding 10vh

    background-color rgba(40,42,46,0.9)

  &__social-section
    @media (min-width: 600px)
      padding 10vh

  &__footer-section
    @media (min-width: 600px)
      padding 5vh

    background-color rgba(40,42,46,0.9)
