div(
  block='ctz-app-layout'
  layout-fill
  layout='column'
)
  md-toolbar.md-whiteframe-z2(layout='row')

    .md-toolbar-tools(layout='row')
      span(elem='header-brand' ): img(src='/images/logo.png' ui-sref='app.s.teachers.list')

      div(layout='row' ng-if='$ctrl.Auth.currentUser')
        md-button(
          ui-sref='app.s.teachers.list'
          ui-sref-active='md-raised'
          ng-if="$ctrl.Auth.currentUser.isStudent"
        ) Inicio

        md-button(
          ui-sref='app.s.appointments.list'
          ui-sref-active='md-raised'
        ) Mis Clases
        
        md-button(
          ui-sref='app.s.appointments.virtualClassroom({id: 13})'
          ui-sref-active='md-raised'
        ) En Vivo

      span(flex)

      div(layout='row' ng-if='$ctrl.Auth.currentUser')
        md-menu
          md-button.md-icon-button.md-icon-button--with-image.md-raised.md-whiteframe-z4(ng-click='$mdOpenMenu($event)')
            img.object-fit-cover(ng-src='{{ $ctrl.Auth.currentUser.avatar }}')

          md-menu-content(width=2)
            md-menu-item(ng-if='$ctrl.Auth.currentUser.isStudent')
              md-button(ui-sref='app.s.students.profile.edit') Editar perfil

            md-menu-item(ng-if='$ctrl.Auth.currentUser.isTeacher')
              md-button(ui-sref='app.s.teachers.profile.edit') Editar perfil
              
            md-menu-item(ng-if='$ctrl.Auth.currentUser.isTeacher')
              md-button(ui-sref='app.s.teachers.profile.addresses') Editar direcciones

            md-menu-item
              md-button(ui-sref='app.s.students.profile.password') Cambiar contrase√±a

            md-divider

            md-menu-item
              md-button(ng-click='$ctrl.logout()') Desconectarse

  ui-view(flex)
